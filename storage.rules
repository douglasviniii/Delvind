rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // As fotos de perfil podem ser lidas por qualquer pessoa, mas apenas o próprio usuário pode escrever.
    match /profile_pictures/{userId} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // As capas do blog podem ser lidas por qualquer pessoa, mas apenas usuários autenticados podem escrever.
    match /blog_covers/{fileName} {
      allow read;
      allow write: if request.auth != null;
    }

    // As imagens do portfólio podem ser lidas por qualquer pessoa, mas apenas usuários autenticados podem escrever.
    match /portfolio_images/{fileName} {
      allow read;
      allow write: if request.auth != null;
    }

    // Os logos dos parceiros podem ser lidos por qualquer pessoa, mas apenas usuários autenticados podem escrever.
    match /partner_logos/{fileName} {
        allow read;
        allow write: if request.auth != null;
    }

    // A pasta de documentos é a mais restrita. Apenas usuários autenticados podem escrever.
    // A leitura será controlada via URLs de download no Firestore, não por regras de leitura direta aqui.
    match /documents/{folderId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // Regra padrão para negar acesso a outros caminhos não especificados.
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
